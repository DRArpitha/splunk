<form class="formsearch">
  <label>Top Security Events</label>

  <fieldset>
       <input type="dropdown" token="unit_hostname" searchWhenChanged="true">
          <label>BIG-IP Hostname:</label>
          <default>*</default>
          <populatingSearch fieldForValue="unit_hostname" fieldForLabel="unit_hostname"> sourcetype = psm_log protocol=SMTP | stats max(violations) by unit_hostname</populatingSearch>
                  <choice value="*">all</choice>
       </input>
       <input type="dropdown" token="vs_name" searchWhenChanged="true">
          <label>BIG-IP Virtual Server:</label>
          <default>*</default>
          <populatingSearch fieldForValue="vs_name" fieldForLabel="vs_name"> sourcetype = psm_log protocol=SMTP | stats max(violations) by vs_name</populatingSearch>
                  <choice value="*">all</choice>
       </input>
        <input type="time" searchWhenChanged="true"/>
  </fieldset>

  <row>
    <html><center><h1>Top Security Events - PSM SMTP</h1></center></html>
  </row>

  <row>
      <chart>
          <title>Top Violations (total)</title>
          <searchTemplate>sourcetype="psm_log" vs_name=$vs_name$ protocol=SMTP `Top_violations_by_webapp_and_device($unit_hostname$)`</searchTemplate>
          <option name="charting.chart">pie</option>
      </chart>
      <chart>
          <title>Top Violations (blocked)</title>
          <searchTemplate>sourcetype="psm_log" vs_name=$vs_name$ protocol=SMTP `Top_violations_blocked($unit_hostname$)`</searchTemplate>
          <option name="charting.chart">pie</option>
      </chart>
 <chart>
          <title>Top Violations (alarmed)</title>
          <searchTemplate>sourcetype="psm_log" vs_name=$vs_name$ protocol=SMTP `Top_violations_alarmed($unit_hostname$)`</searchTemplate>
          <option name="charting.chart">pie</option>
      </chart>
  </row>

</form>

